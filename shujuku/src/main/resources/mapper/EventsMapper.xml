    <select id="getEventsList" resultMap="eventsList">
        SELECT SQL_CALC_FOUND_ROWS
        <include refid="Base_Column_List"/>
        FROM events e
        WHERE e.event_status != "0"
        <if test="eventId != null">
            and e.event_id = #{eventId}
        </if>
        <if test="studentId != null">
            and e.student_id = #{studentId}
        </if>
        <if test="eventArea != null">
            and e.event_area = #{eventArea}
        </if>
        <if test="eventStatus != null">
            and e.event_status = #{eventStatus}
        </if>
        <if test="majorId != null">
            and e.major_id = #{majorId}
        </if>
        <if test="deptId != null">
            and e.dept_id = #{deptId}
        </if>
        <if test="schoolId != null">
            and e.school_id = #{schoolId}
        </if>
        LIMIT #{pageNo},#{pageSize};
        -- SELECT FOUND_ROWS() as total1;
    </select>

    <select id="getEventsAllInfoList" resultMap="eventsAllInfoList">
        SELECT SQL_CALC_FOUND_ROWS
        <include refid="Base_Column_List2" />
        FROM events e
        LEFT JOIN student s
        ON e.student_id = s.student_id
        LEFT JOIN major m
        ON e.major_id = m.major_id
        WHERE
        e.event_status != "0"
        <if test="eventId != null">
            and e.event_id = #{eventId}
        </if>
        <if test="studentId != null">
            and e.student_id = #{studentId}
        </if>
        <if test="eventArea != null">
            and e.event_area = #{eventArea}
        </if>
        <if test="eventStatus != null">
            and e.event_status = #{eventStatus}
        </if>
        <if test="majorId != null">
            and e.major_id = #{majorId}
        </if>
        <if test="deptId != null">
            and e.dept_id = #{deptId}
        </if>
        <if test="schoolId != null">
            and e.school_id = #{schoolId}
        </if>
        ORDER BY
        e.created_datetime DESC
        LIMIT #{pageNo},#{pageSize};
--         SELECT FOUND_ROWS() as total1;
    </select>

