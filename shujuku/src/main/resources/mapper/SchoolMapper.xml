<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.shujuku.mapper.SchoolMapper">

    <sql id="Base_Column_List">
        s.school_id,
        s.school_name,
        s.school_location_id,
        s.school_location
    </sql>

    <resultMap id="schoolList" type="com.example.shujuku.school.bean.School">
        <id column="school_id" property="schoolId"/>
        <result column="school_name" property="schoolName"/>
        <result column="school_location_id" property="schoolLocationId"/>
        <result column="school_location" property="schoolLocation"/>
    </resultMap>

    <select id="getSchoolList" resultMap="schoolList">
        SELECT SQL_CALC_FOUND_ROWS
        <include refid="Base_Column_List" />
        FROM school s WHERE s.school_name = s.school_name
        <if test="schoolId != null">
            and s.school_id = #{schoolId}
        </if>
        <if test="schoolName != null">
            and s.school_name = #{schoolName}
        </if>
        <if test="schoolLocationId != null">
            and s.school_location_id = #{schoolLocationId}
        </if>
        <if test="schoolLocation != null">
            and s.school_location = #{schoolLocation}
        </if>

        LIMIT #{pageNo},#{pageSize};
        --         SELECT FOUND_ROWS() as total1;
    </select>

</mapper>